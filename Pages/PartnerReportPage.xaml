<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:DriveLoadr.PageModels"
             x:Class="DriveLoadr.Pages.PartnerReportPage"
             xmlns:controls="clr-namespace:DriveLoadr.Controls"
             Title="Reports">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Date range selection -->
            <Frame BackgroundColor="#f0f0f0" Padding="10" CornerRadius="6" BorderColor="LightGray">
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                    <DatePicker Date="{Binding StartDate}" MaximumDate="{Binding EndDate}" />
                    <DatePicker Date="{Binding EndDate}" MinimumDate="{Binding StartDate}" />

                    <controls:SolidColorButton Text="Generate Report" Command="{Binding GenerateReportCommand}" Padding="6" WidthRequest="160" AccentColor="LightGrey"/>
                    <controls:SolidColorButton Text="Export to Excel" Command="{Binding ExportReportCommand}" WidthRequest="160"  AccentColor="#4CAF50" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Optional: Current range label -->
            <Label Text="{Binding DateRangeText}" FontAttributes="Bold" HorizontalOptions="Center"/>

            <!-- Report results -->
            <CollectionView ItemsSource="{Binding ReportItems}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="4" CornerRadius="6" BorderColor="LightGray" BackgroundColor="White">
                            <VerticalStackLayout>
                                <!-- Company Name -->
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />

                                <!-- Jobs for this company -->
                                <CollectionView ItemsSource="{Binding Jobs}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <HorizontalStackLayout Spacing="10">
                                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" WidthRequest="100"/>
                                                <Label Text="{Binding JobType}" WidthRequest="100"/>
                                                <Label Text="{Binding Count, StringFormat='{0:N2}'}" WidthRequest="100"/>
                                                <Label Text="{Binding Pay, StringFormat='Â£{0:N2}'}" WidthRequest="100"/>
                                                <Label Text="{Binding Contractors}"/>
                                                <Label Text="{Binding JobDetails}"/>
                                            </HorizontalStackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
